{% extends 'base.html.twig' %}
{% block header %}{% endblock %}

{% block body %}
<div class="modal modal-sheet position-static d-block bg-body-secondary p-4 py-md-5" tabindex="-1" role="dialog" id="modalTour">
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-4 shadow">
      <div class="modal-body p-5 ">
        
            <h2 class="fw-bold mb-0">{% block title %}{{ commune }}{% endblock %}</h2>
        
        

        {% for commune in communes %}
       


        <ul class="d-grid gap-4 my-5 list-unstyled small">
          
          <li class="d-flex gap-4 justify-content-center">
            <div>
              <h5 class="mb-0">{{ commune.nommaire }}</h5>
            </div>
          </li>
          <li class="d-flex gap-4 justify-content-center">
            <div>
              <h5 class="mb-0"><a href="tel:{{ commune.tel }}">{{ commune.tel }}</a></h5>
            </div>
          </li>
          <li class="d-flex gap-4 justify-content-center">
            <div>
              <h5 class="mb-0"><a href="mailto:{{ commune.mail }}">{{ commune.mail }}</a></h5>
            </div>
          </li>
          <li class="d-flex gap-4 justify-content-center">
            <div>
              <h5 class="mb-0">{{ commune.com }}</h5>
            </div>
          </li>
        </ul>
            {% endfor %}

        <a href="{{ path('home') }}" type="button" class="btn btn-lg btn-primary mt-5 w-100" >Fermer</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% block footer %}{% endblock %}
